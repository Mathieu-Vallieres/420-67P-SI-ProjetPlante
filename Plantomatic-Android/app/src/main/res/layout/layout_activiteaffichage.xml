<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coins_arrondis"
    tools:context=".ActiviteAffichage">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imageplante">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/grisPale"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:visibility="visible"
                app:srcCompat="@drawable/camera_transparent" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="300dp"
            android:layout_height="203dp"
            android:background="@drawable/coins_arrondis"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.539"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boutonPhotoPlante"
            app:layout_constraintVertical_bias="0.17">

            <EditText
                android:id="@+id/editTextArrosage"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/coins_arrondis"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextHumidite" />

            <EditText
                android:id="@+id/editTextHumidite"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="56dp"
                android:background="@drawable/coins_arrondis"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="27dp"
                android:text="@string/quantiteEau"
                app:layout_constraintEnd_toStartOf="@+id/editTextArrosage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="41dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="22dp"
                android:text="@string/humiditeMinimale"
                app:layout_constraintEnd_toStartOf="@+id/editTextHumidite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNomPlante" />

            <EditText
                android:id="@+id/editTextNomPlante"
                android:layout_width="270dp"
                android:layout_height="39dp"
                android:layout_marginBottom="150dp"
                android:background="@drawable/coins_arrondis"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:inputType="text"
                android:singleLine="true"
                android:text="@string/nomPlante"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/boutonPhotoPlante"
            android:layout_width="155dp"
            android:layout_height="64dp"
            android:layout_marginStart="56dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="268dp"
            android:backgroundTint="@color/bleuCiel"
            android:text="@string/prendrePhoto"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boutonIdentifier"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:layout_constraintVertical_bias="0.428" />

        <ImageButton
            android:id="@+id/boutonPoubelle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/coins_arrondis"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boutonIdentifier"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:srcCompat="@drawable/poubelle1" />

        <ImageButton
            android:id="@+id/boutonIdentifier"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/coins_arrondis"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toStartOf="@+id/boutonPoubelle"
            app:layout_constraintStart_toEndOf="@+id/boutonPhotoPlante"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:srcCompat="@drawable/microscope" />

        <ImageButton
            android:id="@+id/boutonEnregistrer"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/coins_arrondis"
            android:backgroundTint="@color/bleuCiel"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/disquette"
            tools:layout_editor_absoluteX="340dp"
            tools:layout_editor_absoluteY="660dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu_nav"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/layout_menu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>